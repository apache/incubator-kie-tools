    </dependency>
    <dependency>
      <groupId>net.lingala.zip4j</groupId>
      <artifactId>zip4j</artifactId>
      <scope>test</scope>
    </dependency>
    <!-- Investigate why is gwt-user needed and ideally remove it, see https://issues.jboss.org/browse/DROOLS-1391 -->
