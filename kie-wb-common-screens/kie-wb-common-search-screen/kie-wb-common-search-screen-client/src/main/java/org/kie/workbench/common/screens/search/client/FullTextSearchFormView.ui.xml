<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    >
  <ui:style>
    .input-append button.add-on {
      height: inherit !important;
    }

    .mysearch-text {
      padding: 4px !important;
    }
  </ui:style>

  <ui:with field="i18n" type="org.kie.workbench.common.screens.search.client.resources.i18n.Constants"/>

  <g:FlowPanel>
    <g:HTMLPanel>
      <div class='input-append'>
        <b:TextBox ui:field="termTextBox" placeholder="Search..." addStyleNames="{style.mysearch-text}"/>
        <b:Button icon="SEARCH" ui:field="search" addStyleNames="{style.add-on}"/>
      </div>
    </g:HTMLPanel>
    <g:SimplePanel ui:field="resultPanel"/>
  </g:FlowPanel>
</ui:UiBinder>