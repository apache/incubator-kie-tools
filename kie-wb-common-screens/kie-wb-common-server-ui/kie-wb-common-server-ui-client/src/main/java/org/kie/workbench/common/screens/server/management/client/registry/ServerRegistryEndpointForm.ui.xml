<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:kie="urn:import:org.uberfire.ext.widgets.common.client.common.popups">

  <ui:style>
    .mandatory-field {
      color: #FF0000 !important;
    }
  </ui:style>

  <g:HTMLPanel>
    <kie:BaseModal ui:field="popup" title="Register Server" backdrop="STATIC" keyboard="true" animation="true">
      <b:Well>
        <b:Fieldset>
          <b:Legend>
            Server connectivity info.
            <small>
              Is Required
            </small>
          </b:Legend>
          <b:ControlGroup ui:field="urlGroup">
            <b:ControlLabel for="url">
              <span class="{style.mandatory-field}">*</span>
              Endpoint
            </b:ControlLabel>
            <b:Controls>
              <b:TextBox b:id="url" ui:field="endpointTextBox" placeholder="Endpoint"/>
              <b:HelpInline ui:field="urlHelpInline"/>
            </b:Controls>
          </b:ControlGroup>
          <b:ControlGroup ui:field="nameGroup">
            <b:ControlLabel for="url">
              <span class="{style.mandatory-field}">*</span>
              Name
            </b:ControlLabel>
            <b:Controls>
              <b:TextBox b:id="url" ui:field="nameTextBox" placeholder="Name"/>
              <b:HelpInline ui:field="nameHelpInline"/>
            </b:Controls>
          </b:ControlGroup>
          <b:ControlGroup>
            <b:ControlLabel>
              Username
            </b:ControlLabel>
            <b:Controls>
              <b:TextBox ui:field="usernameTextBox" placeholder="Username"/>
            </b:Controls>
          </b:ControlGroup>
          <b:ControlGroup>
            <b:ControlLabel>
              Password
            </b:ControlLabel>
            <b:Controls>
              <b:PasswordTextBox ui:field="passwordTextBox" placeholder="Password"/>
            </b:Controls>
          </b:ControlGroup>
        </b:Fieldset>
      </b:Well>
      <b:ModalFooter>
        <b:Button type="DEFAULT" ui:field="cancel">
          Cancel
        </b:Button>
        <b:Button icon="BOLT" type="PRIMARY" ui:field="connect">
          Connect
        </b:Button>
      </b:ModalFooter>
    </kie:BaseModal>
  </g:HTMLPanel>
</ui:UiBinder> 