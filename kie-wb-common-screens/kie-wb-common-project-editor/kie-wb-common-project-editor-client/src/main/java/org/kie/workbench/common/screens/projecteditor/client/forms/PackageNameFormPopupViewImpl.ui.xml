<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:bootstrap='urn:import:org.gwtbootstrap3.client.ui'
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'>

  <ui:with field="i18n" type="org.kie.workbench.common.widgets.client.resources.i18n.CommonConstants"/>
  <ui:with field="resources" type="org.kie.workbench.common.widgets.client.resources.CommonsResources"/>

  <gwt:HTMLPanel width="100%">
    <bootstrap:Row>
      <bootstrap:Column size="MD_1">
        <gwt:Label text="{i18n.Name}"/>
      </bootstrap:Column>
      <bootstrap:Column size="MD_1">
        <gwt:TextBox ui:field="selectedNameTextBox" enabled="false" width="90px"/>
      </bootstrap:Column>
      <bootstrap:Column size="MD_1">
        <bootstrap:DropDownMenu ui:field="nameDropDown"/>
      </bootstrap:Column>
    </bootstrap:Row>
  </gwt:HTMLPanel>

</ui:UiBinder>
