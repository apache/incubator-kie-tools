<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    >

  <ui:style>
    .mandatory-field {
      color: #FF0000 !important;
    }
  </ui:style>

  <g:HTMLPanel>

    <b:ControlGroup ui:field="generatorControlGroup">
      <b:Controls>

        <b:ControlLabel for="generatorType"  ><g:Label ui:field="generatorTypeLabel" text="Generator type"  /></b:ControlLabel>
        <b:ListBox b:id="generatorTypeLabel" ui:field="generatorType"></b:ListBox>

        <b:ControlLabel for="generatorName"  ><g:Label ui:field="generatorNameLabel" text="Generator name"  /></b:ControlLabel>
        <b:TextBox b:id="generatorNameLabel" ui:field="generatorName" placeholder="generator name"/>

        <b:HelpInline ui:field="generatorNameInline"/>

      </b:Controls>
    </b:ControlGroup>

  </g:HTMLPanel>

</ui:UiBinder>
