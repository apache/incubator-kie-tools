<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:gwt='urn:import:com.google.gwt.user.client.ui' 
  xmlns:guvnor='urn:import:org.uberfire.client.common'>

  <ui:with field='images' type='org.uberfire.client.resources.CommonWidgetsImages'/>

  <gwt:HTMLPanel>
    <div id="titleBar" class='guvnor-PopupTitleBar-bar'>
      <div style='float:left;' class='guvnor-PopupTitleBar-title'>
        <gwt:Label ui:field="titleLabel"></gwt:Label>
      </div>
      <div class='guvnor-PopupTitleBar-close-button' style='float:right;'>
        <guvnor:ImageButton ui:field="closeButton" img='{images.close}'></guvnor:ImageButton>
      </div>
      <div style='clear:both;'></div>
    </div>
  </gwt:HTMLPanel>

</ui:UiBinder>
