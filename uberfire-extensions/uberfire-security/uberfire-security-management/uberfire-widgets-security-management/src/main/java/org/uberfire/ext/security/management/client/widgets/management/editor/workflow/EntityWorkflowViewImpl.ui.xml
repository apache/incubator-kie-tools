<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:bhtml="urn:import:org.gwtbootstrap3.client.ui.html">

  <ui:with field="i18n" type="org.uberfire.ext.security.management.client.resources.i18n.UsersManagementWidgetsConstants"/>

  <ui:style>
    .buttonsRow {
      margin-top: 15px;
    }
    .button {
      margin: 5px;
    }
  </ui:style>

  <b:Container fluid="true">

    <b:Row>
      <b:Column size="MD_12">
        <b:Alert ui:field="notifications" type="WARNING" dismissable="false">
          <b:Icon type="WARNING" marginRight="10"/>
          <bhtml:Text ui:field="notificationLabel"/>
        </b:Alert>
      </b:Column>
    </b:Row>
    
    <b:Row>
      <b:Column size="MD_12" ui:field="content"/>
    </b:Row>
    
    <b:Row addStyleNames="{style.buttonsRow}">
      <b:Column size="MD_12">
        <b:Button type="PRIMARY" text="{i18n.saveChanges}" title="{i18n.saveChanges}" ui:field="saveButton"  addStyleNames="{style.button}"/>
        <b:Button type="DEFAULT" text="{i18n.cancel}" title="{i18n.cancel}" ui:field="cancelButton" addStyleNames="{style.button}"/>
      </b:Column>
    </b:Row>
    
  </b:Container>
 
</ui:UiBinder> 