<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <artifactId>maven-artifacts</artifactId>
        <groupId>org.kogito-tooling</groupId>
        <version>0.0.0</version>
    </parent>

    <artifactId>scesim-editor-unpacked</artifactId>
    <groupId>org.kogito-tooling</groupId>
    <packaging>jar</packaging>
    <version>0.0.0</version>

    <repositories>
        <repository>
            <id>JBoss Nexus</id>
            <url>https://repository.jboss.org/nexus/content/groups/public</url>
            <snapshots>
                <enabled>true</enabled>
                <updatePolicy>always</updatePolicy>
            </snapshots>
        </repository>
    </repositories>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.kie.kogito</groupId>
            <artifactId>drools-wb-scenario-simulation-editor-kogito-runtime</artifactId>
            <version>${version.scesim.webapp}</version>
            <type>war</type>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <!-- UNPACK -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>unpack-scesim</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <excludes>WEB-INF/</excludes>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.kie.kogito</groupId>
                                    <artifactId>drools-wb-scenario-simulation-editor-kogito-runtime</artifactId>
                                    <version>${version.scesim.webapp}</version>
                                    <type>war</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/scesim</outputDirectory>
                                </artifactItem>
                            </artifactItems>
                            <overWriteReleases>false</overWriteReleases>
                            <overWriteSnapshots>true</overWriteSnapshots>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>
</project>
