<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

  <ui:with field="i18n" type="org.drools.workbench.screens.guided.dtable.client.resources.i18n.GuidedDecisionTableConstants"/>
  <ui:with field="ufImages" type="org.uberfire.ext.widgets.common.client.resources.CommonImages"/>
  <ui:with field="images" type="org.kie.workbench.common.widgets.client.resources.CommonImages"/>
  <ui:with field="res" type="org.uberfire.ext.widgets.core.client.resources.WizardResources"/>

  <gwt:VerticalPanel ui:field="container" width="100%">
    <gwt:VerticalPanel>
      <b:Label text="{i18n.DecisionTableWizardDescriptionActionSetFieldsPage}" styleName="{res.css.wizardDTableCaption}"/>
      <gwt:HorizontalPanel>
        <gwt:VerticalPanel>
          <gwt:SimplePanel>
            <b:Label text="{i18n.DecisionTableWizardAvailableTypes}" styleName="{res.css.wizardDTableHeader}"/>
          </gwt:SimplePanel>
          <gwt:ScrollPanel ui:field="availablePatternsContainer" styleName="{res.css.wizardDTableList}" height="235px" width="180px"/>
        </gwt:VerticalPanel>
        <gwt:VerticalPanel>
          <gwt:SimplePanel>
            <b:Label text="{i18n.DecisionTableWizardAvailableFields}" styleName="{res.css.wizardDTableHeader}"/>
          </gwt:SimplePanel>
          <gwt:ScrollPanel ui:field="availableFieldsContainer" styleName="{res.css.wizardDTableList}" height="235px" width="180px"/>
        </gwt:VerticalPanel>
        <gwt:VerticalPanel ui:field="buttonBar" styleName="{res.css.wizardDTableButtons}">
          <b:Button ui:field="btnAdd" enabled="false">&gt;&gt;</b:Button>
          <b:Button ui:field="btnRemove" enabled="false">&lt;&lt;</b:Button>
        </gwt:VerticalPanel>
        <gwt:VerticalPanel>
          <gwt:SimplePanel>
            <b:Label text="{i18n.DecisionTableWizardChosenFields}" styleName="{res.css.wizardDTableHeader}"/>
          </gwt:SimplePanel>
          <gwt:ScrollPanel ui:field="chosenFieldsContainer" styleName="{res.css.wizardDTableList}" height="235px" width="180px"/>
        </gwt:VerticalPanel>
      </gwt:HorizontalPanel>
      <gwt:VerticalPanel ui:field="fieldDefinition" visible="false">
        <gwt:HorizontalPanel ui:field="columnHeaderContainer" styleName="{res.css.wizardDTableFieldContainerValid} form-group">
          <gwt:InlineHTML>
            <font color="red">*</font>
          </gwt:InlineHTML>
          <b:Label text="{i18n.ColumnHeaderDescription}" styleName="{res.css.wizardDTableFields} help-block"/>
            <b:TextBox ui:field="txtColumnHeader" enabled="false" styleName="{res.css.wizardDTableFields}"/>
            <b:HelpBlock ui:field="txtColumnHeaderHelp" addStyleNames="{res.css.wizardDTableFields}" text="{i18n.DecisionTableWizardIncompleteActions}" visible="false"/>
        </gwt:HorizontalPanel>
        <gwt:VerticalPanel ui:field="criteriaExtendedEntry">
          <gwt:HorizontalPanel styleName="{res.css.wizardDTableFieldContainerValid}">
            <b:Label text="{i18n.optionalValueList}" styleName="{res.css.wizardDTableFields}"/>
            <b:TextBox ui:field="txtValueList" enabled="false" styleName="{res.css.wizardDTableFields}"/>
            <b:Popover placement="TOP" trigger="HOVER" title="{i18n.ValueList}" content="{i18n.ValueListsExplanation}">
              <b:Icon type="QUESTION" addStyleNames="help-block"></b:Icon>
            </b:Popover>
          </gwt:HorizontalPanel>
          <gwt:HorizontalPanel ui:field="defaultValueContainer" styleName="{res.css.wizardDTableFieldContainerValid}">
            <b:Label text="{i18n.DefaultValue}:" styleName="{res.css.wizardDTableFields}"/>
            <gwt:SimplePanel ui:field="defaultValueWidgetContainer" styleName="{res.css.wizardDTableFields}"/>
          </gwt:HorizontalPanel>
        </gwt:VerticalPanel>
        <gwt:VerticalPanel ui:field="criteriaLimitedEntry">
          <gwt:HorizontalPanel ui:field="limitedEntryValueContainer" styleName="{res.css.wizardDTableFieldContainerValid}">
            <gwt:InlineHTML>
              <font color="red">*</font>
            </gwt:InlineHTML>
            <b:Label text="{i18n.LimitedEntryValue}" styleName="{res.css.wizardDTableFields}"/>
            <gwt:SimplePanel ui:field="limitedEntryValueWidgetContainer" styleName="{res.css.wizardDTableFields}"/>
          </gwt:HorizontalPanel>
        </gwt:VerticalPanel>
        <gwt:HorizontalPanel styleName="{res.css.wizardDTableFieldContainerValid}">
          <b:CheckBox ui:field="chkUpdateEngine" styleName="{res.css.wizardDTableFields}" text="{i18n.UpdateEngineWithChanges}:"/>
          <b:Popover placement="TOP" trigger="HOVER" title="{i18n.UpdateFact}" content="{i18n.UpdateDescription}">
            <b:Icon type="QUESTION" addStyleNames="help-block"></b:Icon>
          </b:Popover>
        </gwt:HorizontalPanel>
      </gwt:VerticalPanel>
    </gwt:VerticalPanel>
  </gwt:VerticalPanel>

</ui:UiBinder>