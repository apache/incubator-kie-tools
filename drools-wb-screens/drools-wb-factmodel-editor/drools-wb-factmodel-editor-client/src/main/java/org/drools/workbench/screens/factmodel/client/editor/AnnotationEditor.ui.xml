<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'>

  <ui:with field='images' type='org.drools.workbench.screens.factmodel.client.resources.images.ImageResources'/>
  <ui:with field='itemImages' type='org.kie.workbench.widgets.common.client.resources.ItemImages' />

  <gwt:HTMLPanel>
    <div style="float:left; padding-left:40px;">
      <gwt:HorizontalPanel>
        <gwt:Label ui:field="annotationName"></gwt:Label>
        <gwt:Label text=" : "></gwt:Label>
        <gwt:Label ui:field="annotationKey"></gwt:Label>
        <gwt:Label text=" = "></gwt:Label>
        <gwt:Label ui:field="annotationValue"></gwt:Label>
      </gwt:HorizontalPanel>
    </div>
    <div style="float:right;">
      <gwt:HorizontalPanel>
        <gwt:Image ui:field="editAnnotationIcon" resource='{images.edit}' styleName="guvnor-cursor"></gwt:Image>
        <gwt:Image ui:field="deleteAnnotationIcon" resource='{itemImages.deleteItemSmall}' styleName="guvnor-cursor"></gwt:Image>
      </gwt:HorizontalPanel>
    </div>
    <div style="clear:both;"></div>
  </gwt:HTMLPanel>

</ui:UiBinder>
