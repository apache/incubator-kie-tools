<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
             xmlns:c="urn:import:com.google.gwt.user.cellview.client">

    <ui:with field="i18n" type="org.drools.guvnor.client.i18n.Constants"/>
    <ui:with field='resources' type='org.drools.guvnor.client.resources.ShowcaseResources'/>

    <ui:style>
        .resetDockPanel > div {
        position: static !important;
        }
    
        .cellTable {
        border-bottom: 1px solid #ccc;
        text-align: left;
        margin-bottom: 4px;
        }
    </ui:style>

    <gwt:VerticalPanel width="100%">
        <gwt:HTMLPanel ui:field="titlePanel" styleName='{resources.showcaseCss.mainClass}'>
     
      
            <div style="clear:both;"></div>
        </gwt:HTMLPanel>
        <gwt:DockLayoutPanel
            unit="EM">
            <!-- DataGrid. -->
            <gwt:center>
                <c:DataGrid
                    ui:field='dataGrid' />
            </gwt:center>

            <!-- Pager. -->
            <gwt:south
                size="3">
                <gwt:HTMLPanel>
                    <table
                        style="width:100%">
                        <tr>
                            <td
                                align='center'>
                                <c:SimplePager
                                    ui:field='pager' />
                            </td>
                        </tr>
                    </table>
                </gwt:HTMLPanel>
            </gwt:south>
        </gwt:DockLayoutPanel>
        <gwt:Button
          ui:field='addTaskButton'> Add Task
        </gwt:Button>
        <gwt:Button
          ui:field='refreshTasksButton' >Refresh Tasks
        </gwt:Button>
        <gwt:HorizontalPanel width="100%">
            <gwt:HTMLPanel ui:field="footerPanel"/>
        </gwt:HorizontalPanel>
    </gwt:VerticalPanel>

</ui:UiBinder>