{
  "exclude": ["./**/node_modules"],
  "include": ["**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "lib": ["es6", "dom", "es2018.promise"],
    "baseUrl": "./",
    "target": "es5",
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "jsx": "react"
  }
}
