<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:gwt='urn:import:com.google.gwt.user.client.ui' 
  xmlns:uf='urn:import:org.uberfire.ext.widgets.common.client.common'>

  <ui:with field='i18n' type='org.kie.workbench.common.widgets.client.resources.i18n.CommonConstants'/>
  <ui:with field='resources' type='org.kie.workbench.common.widgets.client.resources.CommonsResources'/>

  <gwt:HorizontalPanel spacing="2">
    <gwt:Label ui:field="parameterName" styleName="{resources.css.workItemParameter}"/>
    <uf:NumericIntegerTextBox ui:field="parameterEditor" styleName="{resources.css.workItemParameter}"/>
    <gwt:ListBox ui:field="lstAvailableBindings" visible="false" enabled="false" styleName="{resources.css.workItemParameter}"/>
  </gwt:HorizontalPanel>

</ui:UiBinder>