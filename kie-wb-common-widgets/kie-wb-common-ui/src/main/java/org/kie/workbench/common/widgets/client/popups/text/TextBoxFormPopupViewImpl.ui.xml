<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <ui:with field="i18n" type="org.kie.workbench.common.widgets.client.resources.i18n.CommonConstants"/>
    <ui:with field="resources" type="org.kie.workbench.common.widgets.client.resources.CommonsResources"/>

    <b:Container fluid="true">
        <b:Row>
            <b:Column size="MD_12">
                <b:Form type="HORIZONTAL">
                    <b:FormGroup ui:field="formGroupName">
                        <b:FormLabel text="{i18n.Name}" addStyleNames="col-md-2"/>
                        <b:Column size="MD_10">
                            <b:TextBox ui:field="nameTextBox"/>
                            <b:HelpBlock ui:field="nameHelpBlock" />
                        </b:Column>
                    </b:FormGroup>
                </b:Form>
            </b:Column>
        </b:Row>
    </b:Container>


</ui:UiBinder>
