<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:widget='urn:import:org.kie.workbench.common.widgets.metadata.client.widget'
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <ui:with field="i18n" type="org.kie.workbench.common.widgets.metadata.client.resources.i18n.MetadataConstants"/>

    <ui:style>

        .firstColumn {
            float: left;
            width: 120px;
        }

        .forceUnlock {
            display: inline-block;
        }
    </ui:style>

    <b:Container fluid="true">
        <b:Row>
            <b:Column size="MD_12">
                <b:Form type="HORIZONTAL">
                    <b:FieldSet>
                        <b:FormGroup>
                            <b:FormLabel text="{i18n.TagsMetaData}" addStyleNames="col-md-2"/>
                            <b:Column size="MD_5">
                                <widget:TagWidget ui:field="tags"/>
                            </b:Column>
                        </b:FormGroup>
                        <b:FormGroup>
                            <b:FormLabel text="{i18n.NoteMetaData}" addStyleNames="col-md-2"/>
                            <b:Column size="MD_5">
                                <b:FormControlStatic ui:field="note"/>
                            </b:Column>
                        </b:FormGroup>
                        <b:FormGroup>
                            <b:FormLabel text="{i18n.URI}" addStyleNames="col-md-2"/>
                            <b:Column size="MD_5">
                                <b:FormControlStatic ui:field="uri"/>
                            </b:Column>
                        </b:FormGroup>
                        <b:FormGroup>
                            <b:FormLabel text="{i18n.SubjectMetaData}" addStyleNames="col-md-2"/>
                            <b:Column size="MD_5">
                                <b:TextBox ui:field="subject" title='{i18n.AShortDescriptionOfTheSubjectMatter}'/>
                            </b:Column>
                        </b:FormGroup>
                        <b:FormGroup>
                            <b:FormLabel text="{i18n.TypeMetaData}" addStyleNames="col-md-2"/>
                            <b:Column size="MD_5">
                                <b:TextBox ui:field="type" title='{i18n.TypeTip}'/>
                            </b:Column>
                        </b:FormGroup>
                        <b:FormGroup>
                            <b:FormLabel text="{i18n.ExternalLinkMetaData}" addStyleNames="col-md-2"/>
                            <b:Column size="MD_5">
                                <b:TextBox ui:field="external" title='{i18n.ExternalLinkTip}'/>
                            </b:Column>
                        </b:FormGroup>
                        <b:FormGroup>
                            <b:FormLabel text="{i18n.SourceMetaData}" addStyleNames="col-md-2"/>
                            <b:Column size="MD_5">
                                <b:TextBox ui:field="source" title='{i18n.SourceMetaDataTip}'/>
                            </b:Column>
                        </b:FormGroup>
                        <b:FormGroup>
                            <b:FormLabel text="{i18n.LockMetaData}" addStyleNames="col-md-2"/>
                            <b:Column size="MD_5">
                                <gwt:InlineLabel ui:field="lockedBy" text='{i18n.LockedByHint}'/>
                                <gwt:PushButton addStyleNames="{style.forceUnlock}" ui:field="unlock" text='{i18n.ForceUnlockCaption}'/>
                            </b:Column>
                        </b:FormGroup>
                    </b:FieldSet>
                </b:Form>
            </b:Column>
        </b:Row>
    </b:Container>

</ui:UiBinder>
