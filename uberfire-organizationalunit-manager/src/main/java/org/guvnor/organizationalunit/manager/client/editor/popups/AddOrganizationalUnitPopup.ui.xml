<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:p="urn:import:org.uberfire.client.views.pfly.widgets"
        >

    <ui:with field="i18n" type="org.guvnor.organizationalunit.manager.client.resources.i18n.OrganizationalUnitManagerConstants"/>

    <b:Form type="HORIZONTAL">
        <b:FieldSet>
            <b:Legend text='{i18n.OrganizationalUnitInformation}'></b:Legend>
            <b:FormGroup ui:field="nameGroup">
                <b:FormLabel for="name" text='{i18n.Name}' showRequiredIndicator="true" addStyleNames="col-md-4"/>
                <b:Column size="MD_8">
                    <b:TextBox b:id="name" ui:field="nameTextBox" placeholder='{i18n.OrganizationalUnitName}' />
                    <b:HelpBlock ui:field="nameHelpInline"/>
                </b:Column>
            </b:FormGroup>
            <b:FormGroup ui:field="defaultGroupIdGroup">
                <p:FormLabelHelp for="groupId" showRequiredIndicator="true" text='{i18n.DefaultGroupID}' helpContent="{i18n.GroupIdInfo}" helpTitle="{i18n.DefaultGroupId}" addStyleNames="col-md-4"/>
                <b:Column size="MD_8">
                    <b:TextBox ui:field="defaultGroupIdTextBox" placeholder='{i18n.DefaultGroupId}'/>
                    <b:HelpBlock ui:field="defaultGroupIdHelpInline"/>
                </b:Column>
            </b:FormGroup>
            <b:FormGroup ui:field="ownerGroup">
                <b:FormLabel for="owner" text='{i18n.Owner}' addStyleNames="col-md-4"/>
                <b:Column size="MD_8">
                    <b:TextBox b:id="owner" ui:field="ownerTextBox" placeholder='{i18n.OrganizationalUnitOwner}' />
                </b:Column>
            </b:FormGroup>
        </b:FieldSet>
    </b:Form>

</ui:UiBinder>