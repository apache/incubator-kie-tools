<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:tb="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:uf="urn:import:org.uberfire.client.workbench.widgets.listbar">

  <ui:with field="res" type="org.uberfire.client.resources.WorkbenchResources"/>

  <ui:style>
    .title {
      font-size: 18px;
    }

    .better_margin {
      padding-right: 10px;
    }

    .pull-right {
      float: right;
    }

    .inline {
      display: inline;
    }
    
    .fill-parent {
      position: relative;
      top: 0;
      bottom: 0;
      width: 100%;
      height: 100%;
    }
    
    .title-bar-button {
      color: rgb(51, 51, 51);
      padding-left: 5px;
      padding-right: 5px;
      text-decoration: none;
    }
    
    .relative-position {
      position: relative;
    }
  </ui:style>

  <uf:ResizeFocusPanel ui:field="container">
    <g:FlowPanel styleName="{style.fill-parent}">
      <g:FlowPanel styleName="{res.CSS.listbar}" ui:field="header">

        <g:FlowPanel styleName="{style.pull-right} {style.better_margin}" ui:field="menuArea">
          <g:FlowPanel styleName="{style.inline} {style.better_margin}" ui:field="contextMenu"/>
          <tb:ButtonGroup styleName="{style.inline} {style.relative-position}" ui:field="dropdownCaretContainer">
            <tb:Anchor styleName="{style.title-bar-button}" ui:field="dropdownCaret" icon="ANGLE_DOWN" dataToggle="DROPDOWN"/>
            <tb:DropDownMenu ui:field="dropdownMenuItems" />
          </tb:ButtonGroup>
          <tb:ButtonGroup styleName="{style.inline}" ui:field="closeButtonContainer">
            <tb:Anchor styleName="{style.title-bar-button}" ui:field="closeButton" icon="TIMES"/>
          </tb:ButtonGroup>
        </g:FlowPanel>

        <g:FlowPanel styleName="{style.inline}">
          <tb:Button ui:field="contextDisplay" size="EXTRA_SMALL" icon="REORDER"/>
          <g:SimplePanel styleName="{style.inline} {style.title}" ui:field="title"/>
        </g:FlowPanel>

      </g:FlowPanel>
      <g:FlowPanel ui:field="content"/>
    </g:FlowPanel>
  </uf:ResizeFocusPanel>

</ui:UiBinder> 