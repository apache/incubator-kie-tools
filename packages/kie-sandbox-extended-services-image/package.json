{
  "private": true,
  "name": "@kie-tools/kie-sandbox-extended-services-image",
  "version": "0.0.0",
  "description": "",
  "license": "Apache-2.0",
  "homepage": "https://github.com/kiegroup/kie-tools",
  "repository": {
    "type": "git",
    "url": "https://github.com/kiegroup/kie-tools.git"
  },
  "bugs": {
    "url": "https://github.com/kiegroup/kie-tools/issues"
  },
  "scripts": {
    "build:dev": "pnpm cleanup && pnpm copy:assets",
    "build:prod": "pnpm cleanup && pnpm copy:assets && run-script-if --build-env \"containerImages.build\" --then \"pnpm docker:build\"",
    "cleanup": "rimraf dist-dev && mkdir dist-dev",
    "copy:assets": "pnpm copy:extended-services",
    "copy:extended-services": "run-script-os",
    "copy:extended-services:linux:darwin": "cp -R ../extended-services/dist/linux/kie_sandbox_extended_services_headless ./dist-dev/kie_sandbox_extended_services_headless",
    "copy:extended-services:win32": "pnpm powershell \"Copy-Item ../extended-services/dist/linux/kie_sandbox_extended_services_headless ./dist-dev/kie_sandbox_extended_services_headless\"",
    "docker:build": "image-builder -r extendedServicesImage.registry -a extendedServicesImage.account -n extendedServicesImage.name -t extendedServicesImage.buildTags",
    "podman:build": "image-builder -r extendedServicesImage.registry -a extendedServicesImage.account -n extendedServicesImage.name -t extendedServicesImage.buildTags -e podman"
  },
  "dependencies": {
    "@kie-tools/extended-services": "workspace:*"
  },
  "devDependencies": {
    "@kie-tools/image-builder": "workspace:*",
    "@kie-tools/root-env": "workspace:*",
    "rimraf": "^3.0.2",
    "run-script-os": "^1.1.6"
  }
}