FROM --platform=linux/amd64 registry.access.redhat.com/ubi9/openjdk-17:1.18

ARG EXTENDED_SERVICES_DEFAULT_HOST
ARG EXTENDED_SERVICES_DEFAULT_PORT

ENV EXTENDED_SERVICES_HOST=$EXTENDED_SERVICES_DEFAULT_HOST
ENV EXTENDED_SERVICES_PORT=$EXTENDED_SERVICES_DEFAULT_PORT

RUN mkdir kie-sandbox

COPY --chown=1000:0 dist-dev/kie_sandbox_extended_services /kie-sandbox/kie_sandbox_extended_services

EXPOSE $EXTENDED_SERVICES_PORT

USER 1000

WORKDIR /kie-sandbox/kie_sandbox_extended_services

CMD java -Dquarkus.http.host=$EXTENDED_SERVICES_HOST -Dquarkus.http.port=$EXTENDED_SERVICES_PORT -jar quarkus-run.jar