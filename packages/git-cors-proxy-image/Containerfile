FROM --platform=linux/amd64 registry.access.redhat.com/ubi9/ubi-minimal:9.2

ENV NODE_VERSION=20.3.0
ARG NODE_PACKAGE=node-v$NODE_VERSION-linux-x64
ARG NODE_HOME=/opt/$NODE_PACKAGE

ENV NODE_PATH $NODE_HOME/lib/node_modules
ENV PATH $NODE_HOME/bin:$PATH

RUN microdnf install tar gzip -y \
  && curl https://nodejs.org/dist/v$NODE_VERSION/$NODE_PACKAGE.tar.gz | tar -xzC /opt/ \
  && mkdir /kie-sandbox \
  && chgrp -R 0 /kie-sandbox \
  && chmod -R g=u /kie-sandbox \
  && chown -R 1000:0 /kie-sandbox

COPY --chown=1000:0 --chmod=775 dist-dev/git-cors-proxy /kie-sandbox/git-cors-proxy

EXPOSE 8080

USER 1000

WORKDIR /kie-sandbox/git-cors-proxy

RUN npm install --cache /kie-sandbox/.cache --production && chmod -R 775 .

CMD [ "/kie-sandbox/git-cors-proxy/bin.js", "start", "-p", "8080" ]