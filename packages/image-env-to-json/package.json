{
  "name": "@kogito-tooling/image-env-to-json",
  "version": "0.0.0",
  "private": true,
  "description": "",
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/kiegroup/kogito-tooling.git"
  },
  "dependencies": {
    "commander": "^8.3.0"
  },
  "devDependencies": {
    "@kogito-tooling/build-env": "0.0.0"
  },
  "scripts": {
    "lint": "yarn run run-script-if --bool \"$(build-env global.build.lint)\" --then \"yarn eslint ./src --ext .ts\"",
    "build:bundle": "ncc build src/index.ts -m && mv dist/index.js dist/image-env-to-json.js",
    "build:standalone:win32": "pkg dist/image-env-to-json.js -t node16-win-x64 -o dist/win/image-env-to-json-standalone",
    "build:standalone:darwin": "pkg dist/image-env-to-json.js -t node16-macos-x64 -o dist/macos/image-env-to-json-standalone",
    "build:standalone:linux": "pkg dist/image-env-to-json.js -t node16-linux-x64 -o dist/linux/image-env-to-json-standalone",
    "build:standalone": "run-script-os",
    "build:dev": "rimraf -rf dist && yarn build:bundle",
    "build:prod": "yarn lint && rimraf -rf dist && yarn build:bundle && yarn build:standalone"
  },
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  }
}
