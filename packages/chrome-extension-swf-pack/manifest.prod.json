{
  "name": "Serverless Workflow for OpenShift",
  "version": "0.0.0",
  "manifest_version": 3,
  "description": "Visualize, edit and deploy Serverless Workflow files using a graphical editor on OpenShift",
  "content_scripts": [
    {
      "run_at": "document_idle",
      "js": ["contentscript.js"],
      "matches": ["https://console.redhat.com/*"],
      "all_frames": true
    }
  ],
  "icons": { "16": "resources/icon_16.png", "48": "resources/icon_48.png", "128": "resources/icon_128.png" },
  "web_accessible_resources": [
    {
      "resources": ["resources/*", "images/*", "envelope/*"],
      "matches": ["https://console.redhat.com/*"]
    }
  ],
  "permissions": ["scripting"],
  "host_permissions": ["https://console.redhat.com/*"]
}
