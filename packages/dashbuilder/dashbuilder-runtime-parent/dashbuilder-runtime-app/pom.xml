      </exclusions>
    </dependency>

    <!-- External Components -->
    <dependency>
      <groupId>org.dashbuilder</groupId>
      <artifactId>dashbuilder-external-backend</artifactId>
      <exclusions>
        <exclusion>
          <groupId>org.dashbuilder</groupId>
          <artifactId>dashbuilder-services-api</artifactId>
        </exclusion>
