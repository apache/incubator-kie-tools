<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

  <ui:with field="i18nCommon" type="org.uberfire.ext.widgets.common.client.resources.i18n.CommonConstants"/>

  <ui:style>
    .buttonsPanel {
      float: right;
      position: relative;
      margin: 10px;
    }
    .button {
      margin: 5px;
    }
  </ui:style>

  <b:Alert ui:field="alert">
    <g:FlowPanel addStyleNames="{style.buttonsPanel}">
        <b:Button ui:field="okButton" type="DEFAULT" text="{i18nCommon.OK}" addStyleNames="{style.button}" />
        <b:Button ui:field="cancelButton" type="DEFAULT" text="{i18nCommon.Cancel}" addStyleNames="{style.button}" />
    </g:FlowPanel>
  </b:Alert>

</ui:UiBinder>
