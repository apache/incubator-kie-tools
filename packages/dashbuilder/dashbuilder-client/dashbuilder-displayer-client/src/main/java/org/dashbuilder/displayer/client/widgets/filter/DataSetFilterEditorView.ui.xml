<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

  <ui:with field="i18n" type="org.dashbuilder.displayer.client.resources.i18n.CommonConstants"/>

  <ui:style>
    .filter-editor-margin {
      margin-left: 35px;
    }
  </ui:style>

  <g:FlowPanel>
    <g:FlowPanel ui:field="filterListPanel" />
    <g:HorizontalPanel ui:field="addFilterPanel" visible="false">
      <b:ListBox ui:field="newFilterListBox" width="240px" addStyleNames="{style.filter-editor-margin}"/>
      <b:Button icon="TRASH" ui:field="filterDeleteIcon" type="LINK" iconSize="LARGE" iconFixedWidth="true" title="{i18n.removeFilter}"/>
    </g:HorizontalPanel>
    <b:Button ui:field="addFilterButton" type="LINK" text="{i18n.common_button_addnew}"/>
  </g:FlowPanel>
</ui:UiBinder>
