<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
             xmlns:u='urn:import:org.uberfire.ext.widgets.common.client.common'>

    <ui:style>
        .datePicker {
            float: left;
            width: 275px;
        }
        .calendarIcon {
            margin-left: -1px;
        }
    </ui:style>

    <g:FlowPanel>
      <u:DatePicker ui:field="input" styleName="{style.datePicker}" addStyleNames="form-control" />
      <b:Button  ui:field="icon" icon="CALENDAR" styleName="{style.calendarIcon}" />
    </g:FlowPanel>
</ui:UiBinder>
