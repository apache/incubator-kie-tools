<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
  xmlns:editor="urn:import:org.dashbuilder.common.client.editor"
  xmlns:common="urn:import:org.dashbuilder.common.client.widgets"
  xmlns:ddwn="urn:import:org.dashbuilder.common.client.editor.list">

  <ui:with field="i18n"
    type="org.dashbuilder.client.widgets.resources.i18n.DataSetEditorConstants" />

  <ui:style>
    .inline {
    margin-right: 5px;
    }
    .row {
    margin-bottom: 5px;
    }
    .attr
    {
    float: left;
    margin-right: 5px;
    }
    .hidden {
    display: none;
    }
  </ui:style>

  <b:Container fluid="true">

    <!-- host -->
    <b:Row addStyleNames="{style.row}">
      <b:Column size="MD_3">
        <g:HTML text="{i18n.kafka_host}"
          addStyleNames="{style.attr}" />
        <b:Tooltip isAnimated="true" placement="BOTTOM"
          title="{i18n.kafka_host_description}">
          <b:Icon type="QUESTION_CIRCLE" />
        </b:Tooltip>
      </b:Column>
      <b:Column size="MD_9">
        <editor:ValueBoxEditor.View
          ui:field="hostView">
          <editor:valuebox>
            <b:TextBox
              placeholder="{i18n.kafka_host_placeholder}" />
          </editor:valuebox>
        </editor:ValueBoxEditor.View>
      </b:Column>
    </b:Row>

    <!-- port -->
    <b:Row addStyleNames="{style.row}">
      <b:Column size="MD_3">
        <g:HTML text="{i18n.kafka_port}"
          addStyleNames="{style.attr}" />
        <b:Tooltip isAnimated="true" placement="BOTTOM"
          title="{i18n.kafka_port_description}">
          <b:Icon type="QUESTION_CIRCLE" />
        </b:Tooltip>
      </b:Column>
      <b:Column size="MD_9">
        <editor:ValueBoxEditor.View
          ui:field="portView">
          <editor:valuebox>
            <b:TextBox
              placeholder="{i18n.kafka_port_placeholder}" />
          </editor:valuebox>
        </editor:ValueBoxEditor.View>
      </b:Column>
    </b:Row>

    <!-- target -->
    <b:Row addStyleNames="{style.row}">
      <b:Column size="MD_3">
        <g:HTML text="{i18n.kafka_target}"
          addStyleNames="{style.attr}" />
        <b:Tooltip isAnimated="true" placement="BOTTOM"
          title="{i18n.kafka_target_description}">
          <b:Icon type="QUESTION_CIRCLE" />
        </b:Tooltip>
      </b:Column>
      <b:Column size="MD_9">
        <ddwn:DropDownEditor.View
          ui:field="targetView" />
      </b:Column>
    </b:Row>

    <!-- filter -->
    <b:Row addStyleNames="{style.row}">
      <b:Column size="MD_3">
        <g:HTML text="{i18n.kafka_filter}"
          addStyleNames="{style.attr}" />
        <b:Tooltip isAnimated="true" placement="BOTTOM"
          title="{i18n.kafka_filter_description}">
          <b:Icon type="QUESTION_CIRCLE" />
        </b:Tooltip>
      </b:Column>
      <b:Column size="MD_9">
        <editor:ValueBoxEditor.View
          ui:field="filterView">
          <editor:valuebox>
            <b:TextBox />
          </editor:valuebox>
        </editor:ValueBoxEditor.View>
      </b:Column>
    </b:Row>


    <!-- clientId -->
    <b:Row addStyleNames="{style.row}">
      <b:Column size="MD_3">
        <g:HTML text="{i18n.kafka_clientId}"
          addStyleNames="{style.attr}" />
        <b:Tooltip isAnimated="true" placement="BOTTOM"
          title="{i18n.kafka_clientId_description}">
          <b:Icon type="QUESTION_CIRCLE" />
        </b:Tooltip>
      </b:Column>
      <b:Column size="MD_9">
        <editor:ValueBoxEditor.View
          ui:field="clientIdView">
          <editor:valuebox>
            <b:TextBox />
          </editor:valuebox>
        </editor:ValueBoxEditor.View>
      </b:Column>
    </b:Row>

    <!-- nodeId -->
    <b:Row addStyleNames="{style.row}">
      <b:Column size="MD_3">
        <g:HTML text="{i18n.kafka_nodeId}"
          addStyleNames="{style.attr}" />
        <b:Tooltip isAnimated="true" placement="BOTTOM"
          title="{i18n.kafka_nodeId_description}">
          <b:Icon type="QUESTION_CIRCLE" />
        </b:Tooltip>
      </b:Column>
      <b:Column size="MD_9">
        <editor:ValueBoxEditor.View
          ui:field="nodeIdView">
          <editor:valuebox>
            <b:TextBox />
          </editor:valuebox>
        </editor:ValueBoxEditor.View>
      </b:Column>
    </b:Row>

    <!-- topic -->
    <b:Row addStyleNames="{style.row}">
      <b:Column size="MD_3">
        <g:HTML text="{i18n.kafka_topic}"
          addStyleNames="{style.attr}" />
        <b:Tooltip isAnimated="true" placement="BOTTOM"
          title="{i18n.kafka_topic_description}">
          <b:Icon type="QUESTION_CIRCLE" />
        </b:Tooltip>
      </b:Column>
      <b:Column size="MD_9">
        <editor:ValueBoxEditor.View
          ui:field="topicView">
          <editor:valuebox>
            <b:TextBox />
          </editor:valuebox>
        </editor:ValueBoxEditor.View>
      </b:Column>
    </b:Row>

    <!-- partition [Hidden for simplicity]-->
    <b:Row addStyleNames="{style.hidden}">
      <b:Column size="MD_3">
        <g:HTML text="{i18n.kafka_partition}"
          addStyleNames="{style.attr}" />
        <b:Tooltip isAnimated="true" placement="BOTTOM"
          title="{i18n.kafka_partition_description}">
          <b:Icon type="QUESTION_CIRCLE" />
        </b:Tooltip>
      </b:Column>
      <b:Column size="MD_9">
        <editor:ValueBoxEditor.View
          ui:field="partitionView">
          <editor:valuebox>
            <b:TextBox />
          </editor:valuebox>
        </editor:ValueBoxEditor.View>
      </b:Column>
    </b:Row>

  </b:Container>

</ui:UiBinder>