{
  "name": "@kogito-tooling/dashbuilder",
  "version": "0.0.0",
  "description": "",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/kiegroup/kogito-tooling.git"
  },
  "files": [
    "**/target/*.jar"
  ],
  "devDependencies": {
    "@kogito-tooling/build-env": "0.0.0"
  },
  "scripts": {
    "powershell": "@powershell -NoProfile -ExecutionPolicy Unrestricted -Command",
    "lint": "echo 'Linting'",
    "install:mvnw": "mvn -N io.takari:maven:wrapper",
    "dist": "rm -f dist/dashbuilder_dist.zip && zip -j dist/dashbuilder_dist.zip ./dashbuilder-authoring/target/dashbuilder-authoring.war ./dashbuilder-authoring/target/dashbuilder-authoring-bootable.jar ./dashbuilder-runtime-parent/dashbuilder-runtime-app/target/dashbuilder-runtime-app-runner.jar",
    "build:dev": "yarn install:mvnw && mvn clean install -B -ntp -DskipTests -Dgwt.compiler.skip=true",
    "build:prod": "yarn lint && yarn install:mvnw && mvn clean install -Dfull -B -ntp -DskipTests=$(build-env global.build.test --not) && yarn dist"
  }
}
