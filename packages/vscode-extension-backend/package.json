{
  "name": "vscode-extension-backend",
  "displayName": "Backend services for BPMN, DMN and Test Scenario Editors",
  "description": "",
  "version": "0.10.0",
  "license": "Apache-2.0",
  "engines": {
    "vscode": "^1.46.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kiegroup/kogito-tooling.git"
  },
  "categories": [
    "Other"
  ],
  "publisher": "kie-group",
  "main": "./dist/extension/extension.js",
  "activationEvents": [
    "onLanguage:bpmn",
    "onLanguage:dmn",
    "onLanguage:scesim"
  ],
  "contributes": {
    "languages": [
      {
        "id": "bpmn",
        "extensions": [
          ".bpmn",
          ".bpmn2"
        ],
        "aliases": [
          "bpmn",
          "bpmn2",
          "Business Process Model and Notation"
        ]
      },
      {
        "id": "dmn",
        "extensions": [
          ".dmn"
        ],
        "aliases": [
          "dmn",
          "Decision Model and Notation"
        ]
      },
      {
        "id": "scesim",
        "extensions": [
          ".scesim"
        ],
        "aliases": [
          "scesim",
          "Test Scenario"
        ]
      }
    ]
  },
  "scripts": {
    "package:prod": "cross-var \"vsce package --yarn -o ./dist/vscode-extension-backend_$npm_package_version.vsix\"",
    "compile": "webpack",
    "watch": "webpack",
    "lint": "run-script-if --env KOGITO_TOOLING_BUILD_lint --true-if-empty --then 'yarn eslint ./src --ext .ts,.tsx'",
    "test": "run-script-if --env KOGITO_TOOLING_BUILD_test --true-if-empty --then 'jest --silent --verbose --passWithNoTests'",
    "test:it": "echo 'No tests to run.'",
    "build:dev": "rimraf dist && webpack --env dev",
    "build:prod:linux:darwin": "rimraf dist && yarn lint && webpack && yarn run test && yarn run test:it && yarn run package:prod",
    "build:prod:windows": "rimraf dist && yarn lint && webpack && yarn run test && yarn run package:prod",
    "build:prod": "run-script-os"
  },
  "dependencies": {
    "@kie-tooling-core/vscode-extension": "^0.0.3",
    "@kogito-tooling/external-assets-base": "0.10.0"
  }
}
