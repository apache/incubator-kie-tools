{
  "private": true,
  "name": "chrome-extension-serverless-workflow-editor",
  "version": "0.0.0",
  "description": "",
  "license": "Apache-2.0",
  "homepage": "https://github.com/kiegroup/kie-tools",
  "repository": {
    "type": "git",
    "url": "https://github.com/kiegroup/kie-tools.git"
  },
  "bugs": {
    "url": "https://github.com/kiegroup/kie-tools/issues"
  },
  "scripts": {
    "build:dev": "rimraf dist && webpack --env dev",
    "build:prod": "pnpm lint && pnpm test && rimraf dist && webpack && pnpm test:e2e",
    "install": "node install.js",
    "lint": "run-script-if --bool \"$(build-env linters.run)\" --then \"kie-tools--eslint ./src\"",
    "start": "webpack serve --env dev",
    "test": "run-script-if --ignore-errors \"$(build-env tests.ignoreFailures)\" --bool \"$(build-env tests.run)\" --then \"jest --silent --verbose --passWithNoTests\"",
    "test:e2e": "run-script-if --ignore-errors \"$(build-env endToEndTests.ignoreFailures)\" --bool \"$(build-env endToEndTests.run)\" --then \"pnpm rimraf ./dist-e2e-tests\" \"pnpm start-server-and-test test:e2e:start https-get://localhost:$(build-env swfChromeExtension.dev.port) test:e2e:run\"",
    "test:e2e:run": "jest --runInBand -c ./jest.e2e.config.js",
    "test:e2e:start": "pnpm start"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-react": "^7.16.0",
    "@kie-tools-core/chrome-extension": "workspace:*",
    "@kie-tools-core/editor": "workspace:*",
    "@kie-tools-core/keyboard-shortcuts": "workspace:*",
    "@kie-tools-core/patternfly-base": "workspace:*",
    "@kie-tools-core/webpack-base": "workspace:*",
    "@kie-tools/chrome-extension-test-helper": "workspace:*",
    "@kie-tools/eslint": "workspace:*",
    "@kie-tools/root-env": "workspace:*",
    "@kie-tools/serverless-workflow-combined-editor": "workspace:*",
    "@kie-tools/serverless-workflow-diagram-editor-assets": "workspace:*",
    "@kie-tools/serverless-workflow-diagram-editor-envelope": "workspace:*",
    "@kie-tools/serverless-workflow-text-editor": "workspace:*",
    "@kie-tools/tsconfig": "workspace:*",
    "@types/chrome": "^0.0.193",
    "@types/jest": "^29.5.7",
    "@types/jest-when": "^3.5.4",
    "copy-webpack-plugin": "^11.0.0",
    "jest": "^29.7.0",
    "jest-when": "^3.6.0",
    "monaco-editor": "^0.39.0",
    "monaco-editor-webpack-plugin": "^7.0.1",
    "monaco-yaml": "^4.0.4",
    "rimraf": "^3.0.2",
    "start-server-and-test": "^1.12.1",
    "ts-jest": "^29.1.1",
    "typescript": "^4.6.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.9.0",
    "zip-webpack-plugin": "^4.0.1"
  }
}