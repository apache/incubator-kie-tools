{
  "name": "vscode-extension-serverless-workflow-editor",
  "publisher": "redhat",
  "displayName": "Serverless Workflow Editor",
  "description": "Edit Serverless Workflow definitions",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/kiegroup/kogito-tooling.git"
  },
  "scripts": {
    "lint": "yarn run run-script-if --bool \"$(build-env global.build.lint)\" --then \"yarn eslint ./src --ext .ts,.tsx\"",
    "build:prod": "rimraf dist && webpack && yarn pack:prod",
    "build:dev": "rimraf dist && webpack --env dev",
    "pack:prod": "vsce package --githubBranch main --yarn -o ./dist/vscode_extension_serverless_workflow_editor_$npm_package_version.vsix",
    "compile": "webpack",
    "watch": "webpack",
    "run:webmode": "yarn vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --version=stable"
  },
  "dependencies": {
    "@kie-tooling-core/editor": "0.0.0",
    "@kie-tooling-core/i18n": "0.0.0",
    "@kie-tooling-core/patternfly-base": "0.0.0",
    "@kie-tooling-core/vscode-extension": "0.0.0",
    "@kie-tooling-core/workspace": "0.0.0",
    "@kogito-tooling/serverless-workflow-editor": "0.0.0"
  },
  "devDependencies": {
    "@kogito-tooling/build-env": "0.0.0"
  },
  "icon": "icon.png",
  "main": "./dist/extension/extension.js",
  "browser": "./dist/extension/extension.js",
  "engines": {
    "vscode": "^1.46.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCustomEditor:kieKogitoWebviewEditorsServerlessWorkflow"
  ],
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": false
    }
  },
  "contributes": {
    "customEditors": [
      {
        "viewType": "kieKogitoWebviewEditorsServerlessWorkflow",
        "displayName": "Serverless Workflow Editor",
        "selector": [
          {
            "filenamePattern": "*.{sw.json,sw.yml}"
          }
        ]
      }
    ],
    "languages": [
      {
        "id": "serverless-workflow",
        "extensions": [
          ".sw.json",
          ".sw.yml"
        ],
        "aliases": [
          "sw.json",
          "sw.yml",
          "Serverless workflow description"
        ]
      }
    ],
    "configuration": {
      "title": "Serverless Workflow Editor",
      "properties": {
        "kogito.sw.json.runOnSave": {
          "type": "string",
          "default": "extension.kogito.silentlyGenerateSvgSw",
          "markdownDescription": "Execute a command on each save operation of the Serverless Workflow file."
        },
        "kogito.sw.yml.runOnSave": {
          "type": "string",
          "default": "extension.kogito.silentlyGenerateSvgSw",
          "markdownDescription": "Execute a command on each save operation of the Serverless Workflow file."
        },
        "kogito.sw.yaml.runOnSave": {
          "type": "string",
          "default": "extension.kogito.silentlyGenerateSvgSw",
          "markdownDescription": "Execute a command on each save operation of the Serverless Workflow file."
        },
        "kogito.sw.json.svgFilenameTemplate": {
          "type": "string",
          "default": "${fileBasenameNoExtension}.svg",
          "markdownDescription": "Filename template to be used when generating SVG files (defaults to `${fileBasenameNoExtension}.svg`)."
        },
        "kogito.sw.yml.svgFilenameTemplate": {
          "type": "string",
          "default": "${fileBasenameNoExtension}.svg",
          "markdownDescription": "Filename template to be used when generating SVG files (defaults to `${fileBasenameNoExtension}.svg`)."
        },
        "kogito.sw.yaml.svgFilenameTemplate": {
          "type": "string",
          "default": "${fileBasenameNoExtension}.svg",
          "markdownDescription": "Filename template to be used when generating SVG files (defaults to `${fileBasenameNoExtension}.svg`)."
        },
        "kogito.sw.json.svgFilePath": {
          "type": "string",
          "default": "${fileDirname}",
          "markdownDescription": "Where to save generated SVG files (defaults to same path as .sw.json file: `${fileDirname}`)."
        },
        "kogito.sw.yml.svgFilePath": {
          "type": "string",
          "default": "${fileDirname}",
          "markdownDescription": "Where to save generated SVG files (defaults to same path as .sw.yml file: `${fileDirname}`)."
        },
        "kogito.sw.yaml.svgFilePath": {
          "type": "string",
          "default": "${fileDirname}",
          "markdownDescription": "Where to save generated SVG files (defaults to same path as .sw.yaml file: `${fileDirname}`)."
        }
      }
    },
    "commands": [
      {
        "command": "extension.kogito.getPreviewSvgSw",
        "title": "Get Serverless Workflow Editor Preview SVG",
        "icon": {
          "light": "./static/svg-icon-light.png",
          "dark": "./static/svg-icon-dark.png"
        }
      },
      {
        "command": "extension.kogito.silentlyGenerateSvgSw",
        "title": "Generate SVG without any notification"
      }
    ]
  }
}
