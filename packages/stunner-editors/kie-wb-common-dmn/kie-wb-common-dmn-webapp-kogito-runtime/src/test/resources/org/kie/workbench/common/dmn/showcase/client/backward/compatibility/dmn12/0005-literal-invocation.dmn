    </decision>
    <businessKnowledgeModel name="PMT" id="b_PMT">
        <variable name="PMT"/>
        <encapsulatedLogic>
            <formalParameter typeRef="number" name="p"/>
            <formalParameter typeRef="number" name="r"/>
            <formalParameter typeRef="number" name="n"/>
