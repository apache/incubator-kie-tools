        <knowledgeRequirement id="a83f1594-0b33-47da-9bf6-2b1b81ab4534">
            <requiredKnowledge href="#b_PMT"/>
        </knowledgeRequirement>
        <literalExpression>
            <text>PMT(Loan.amount, Loan.rate, Loan.term)+fee</text>
