<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">
    <ui:with field="i18n"
             type="org.uberfire.ext.widgets.common.client.resources.i18n.CommonConstants"/>

    <b:InputGroup>
        <b:Input ui:field="file" type="FILE" visible="false"/>
        <b:Input ui:field="fileText" type="TEXT"/>
        <b:InputGroupAddon ui:field="chooseButton" icon="FILE_O" iconPosition="RIGHT" title="{i18n.ChooseFile}" addStyleNames="btn btn-default"/>
        <b:InputGroupAddon ui:field="uploadButton" icon="UPLOAD" iconPosition="RIGHT" title="{i18n.Upload}" addStyleNames="btn btn-default"/>
    </b:InputGroup>

</ui:UiBinder>