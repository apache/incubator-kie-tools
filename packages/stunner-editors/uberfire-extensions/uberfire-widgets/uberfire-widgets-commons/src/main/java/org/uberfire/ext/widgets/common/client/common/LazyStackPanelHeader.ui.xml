<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
    >

  <ui:with field='resources' type='org.uberfire.ext.widgets.common.client.resources.CommonResources'/>

  <gwt:HTMLPanel>
    <table style='width:100%; border-collapse:collapse;'>
      <tr>
        <td style='width:4px;'><div class='{resources.CSS.greyTopLeftCornerClass}'></div></td>
        <td><div class='{resources.CSS.greyTopClass}'></div></td>
        <td style='width:4px;'><div class='{resources.CSS.greyTopRightCornerClass}'></div></td>
      </tr>

      <tr>
        <td class='{resources.CSS.greySideLeftClass}'></td>
        <td class='{resources.CSS.greyCenterClass}'>
          <gwt:HorizontalPanel ui:field="container">
            <gwt:SimplePanel styleName="guvnor-LazyStackPanel-row-header-icon">
              <gwt:Image ui:field="icon" />
            </gwt:SimplePanel>
          </gwt:HorizontalPanel>
        </td>
        <td class='{resources.CSS.greySideRightClass}'></td>
      </tr>

      <tr>
        <td style='width:4px;'><div class='{resources.CSS.greyBottomLeftCornerClass}'></div></td>
        <td><div class='{resources.CSS.greyBottomClass}'></div></td>
        <td style='width:4px;'><div class='{resources.CSS.greyBottomRightCornerClass}'></div></td>
      </tr>
    </table>
  </gwt:HTMLPanel>

</ui:UiBinder>
