# Use jammy due to compatibility with GHA ubuntu-latest
FROM mcr.microsoft.com/playwright:v1.45.2-jammy

# adds args/envs for the config.ts
# requires to bind mount the test folder to /app/tests/
# requires to bind mount the dist-e2e/

WORKDIR /kie-tools-playwright

COPY package.container.json package.json
COPY playwright.container.config.ts playwright.config.ts
COPY projectNames.ts projectNames.ts
COPY projectNames.ts playwright-base/projectNames.ts
COPY annotations.ts playwright-base/annotations.ts
COPY tsconfig.container.json tsconfig.json

# Left in multiples layers to simplify debugging and version upgrade
RUN npm install
RUN npx playwright install-deps && npx playwright install chrome
RUN npm install --global pnpm@9.3.0

ENTRYPOINT ["/bin/bash"]
