{
  "name": "@kie-tools/playwright-base",
  "version": "0.0.0",
  "description": "",
  "license": "Apache-2.0",
  "keywords": [],
  "homepage": "https://github.com/apache/incubator-kie-tools",
  "repository": {
    "type": "git",
    "url": "https://github.com/apache/incubator-kie-tools.git"
  },
  "bugs": {
    "url": "https://github.com/apache/incubator-kie-tools/issues"
  },
  "bin": {
    "playwright-base-container": "bin.js"
  },
  "main": "dist/bin.js",
  "files": [
    "bin.js",
    "dist",
    "src"
  ],
  "scripts": {
    "build:dev": "run-script-if --bool \"$(build-env containerImages.build)\" --then \"pnpm image:docker:build\"",
    "build:prod": "pnpm build:dev",
    "image:docker:build": "docker build --platform=linux/amd64 -t dev.local/apache-kie-tools/playwright-e2e-tests-image:$(build-env root.streamName) . -f Containerfile --output type=docker",
    "install": "pnpm install:cli && pnpm install:deps",
    "install:cli": "rimraf dist && tsc",
    "install:deps": "run-script-if --bool \"$(build-env playwrightBase.installDeps)\" --then \"pnpm playwright install --with-deps\""
  },
  "dependencies": {
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@kie-tools-scripts/run-script-if": "workspace:*",
    "@kie-tools/root-env": "workspace:*",
    "@kie-tools/tsconfig": "workspace:*",
    "@playwright/test": "^1.45.2",
    "@types/yargs": "^17.0.35",
    "rimraf": "^3.0.2",
    "run-script-os": "^1.1.6",
    "typescript": "^5.9.3"
  }
}
