FROM registry.access.redhat.com/openjdk/openjdk-11-rhel7:1.11

RUN mkdir /tmp/kogito/

WORKDIR /tmp/kogito/

COPY dist-dev/mvnw mvnw
COPY dist-dev/.mvn/ .mvn/

RUN ./mvnw io.quarkus:quarkus-maven-plugin:create -B -ntp \
  -DplatformVersion=2.7.3.Final \
  -DprojectGroupId=org.kie.kogito \
  -DprojectArtifactId=serverless-workflow-base \
  -DprojectVersion=0.0.0 \
  -Dextensions="kogito-quarkus-serverless-workflow,quarkus-resteasy-jackson,quarkus-jsonp,quarkus-smallrye-openapi,quarkus-resteasy,smallrye-health" \
  && cd serverless-workflow-base \
  && echo -e '\nquarkus.swagger-ui.always-include=true\nquarkus.http.host=0.0.0.0\nquarkus.http.cors=true' >> src/main/resources/application.properties \
  && rm -rf src/main/docker/ src/main/java/ src/test/  \
  && echo "" > src/main/resources/META-INF/resources/index.html \
  && ./mvnw clean package -B -ntp \
  && cp target/quarkus-app/*.jar /deployments/ \
  && cp -R target/quarkus-app/lib/ /deployments/ \
  && cp -R target/quarkus-app/app/ /deployments/ \
  && cp -R target/quarkus-app/quarkus/ /deployments/ \
  && rm -fr target
