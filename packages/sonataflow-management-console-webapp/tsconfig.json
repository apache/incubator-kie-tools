{
  "extends": "@kie-tools/tsconfig/tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": false,
    "declarationMap": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictNullChecks": false
  },
  "include": ["src"],
  "preserveSymlinks": true,

  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "esModuleInterop": true,
      "module": "CommonJS"
    }
  }
}
