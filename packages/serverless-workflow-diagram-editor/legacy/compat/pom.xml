<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <parent>
    <artifactId>legacy-parent</artifactId>
    <groupId>org.kie.kogito.stunner.serverless.editor.legacy</groupId>
    <version>0.0.0</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>

  <artifactId>compat</artifactId>

  <dependencies>
    <dependency>
      <groupId>com.google.elemental2</groupId>
      <artifactId>elemental2-dom</artifactId>
    </dependency>
    <dependency>
      <groupId>org.treblereel.gwt.gwtproject.widgets</groupId>
      <artifactId>gwt-widgets</artifactId>
    </dependency>
    <dependency>
      <groupId>org.treblereel.gwt.gwtproject.validation</groupId>
      <artifactId>gwt-validation-api</artifactId>
    </dependency>
    <dependency>
      <groupId>io.crysknife</groupId>
      <artifactId>crysknife-annotations</artifactId>
    </dependency>
    <dependency>
      <groupId>io.crysknife.ui.templates</groupId>
      <artifactId>api</artifactId>
    </dependency>
    <dependency>
      <groupId>io.crysknife.legacy.ui.databinding</groupId>
      <artifactId>api</artifactId>
    </dependency>
    <dependency>
      <groupId>com.google.elemental2</groupId>
      <artifactId>elemental2-webstorage</artifactId>
    </dependency>
    <dependency>
      <groupId>org.treblereel.gwt.nio</groupId>
      <artifactId>gwt-nio</artifactId>
    </dependency>
  </dependencies>

  <build>
    <resources>
      <resource>
        <directory>src/main/java</directory>
        <includes>
          <include>**/*.java</include>
          <include>**/*.html</include>
          <include>**/*.css</include>
          <include>**/*.js</include>
        </includes>
      </resource>
      <resource>
        <directory>src/main/resources</directory>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>${maven.compiler.source}</source>
          <target>${maven.compiler.target}</target>
        </configuration>
      </plugin>
    </plugins>
  </build>


</project>