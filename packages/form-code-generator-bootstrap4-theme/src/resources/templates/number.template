<input
    type="number"
    class="form-control"
    id="<%=id%>"
    name="<%=name%>"
    <%=autoComplete==='off' ? ' autoComplete="off"' : ''%>
    <%=disabled ? "disabled" : ""%>
    <%=placeholder ? `placeholder="${placeholder}"` : ''%>
    <%=min ? `min="${min}"` : ''%>
    <%=max ? `max="${max}"` : ''%>
    <%=step ? `step="${step}"` : ''%>
    value="<%=value%>"/>