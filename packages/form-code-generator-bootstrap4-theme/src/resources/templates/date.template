<input
      type="datetime-local"
      id="<%=id%>"
      name="<%=name%>"
      class="form-control"
      <%=autoComplete==='off' ? ' autoComplete="off"' : ''%>
      <%=disabled ? "disabled" : ""%>
      <%=placeholder ? `placeholder="${placeholder}"` : ''%>
      <%=min ? `min="${min}"` : ''%>
      <%=max ? `max="${max}"` : ''%>
      <%=value ? `value="${value}"` : ''%>/>