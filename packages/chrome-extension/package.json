{
  "name": "@kie-tools-core/chrome-extension",
  "version": "0.0.0",
  "description": "",
  "license": "Apache-2.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "resources"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kiegroup/kie-tools.git"
  },
  "dependencies": {
    "@kie-tools-core/editor": "workspace:*",
    "@kie-tools-core/i18n": "workspace:*",
    "@kie-tools-core/workspace": "workspace:*",
    "@kie-tools-core/patternfly-base": "workspace:*",
    "@octokit/rest": "^18.5.3",
    "minimatch": "^3.0.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.193",
    "@kie-tools/build-env": "workspace:*",
    "@kie-tools-core/run-script-if": "workspace:*",
    "@types/minimatch": "^3.0.4"
  },
  "scripts": {
    "lint": "pnpm run-script-if --bool \"$(build-env global.build.lint)\" --then \"pnpm eslint ./src --ext .ts,.tsx\"",
    "test": "pnpm run-script-if --bool \"$(build-env global.build.test)\" --then \"jest --silent --verbose --passWithNoTests\"",
    "build:dev": "rimraf dist && tsc -p tsconfig.dev.json",
    "build:prod": "pnpm lint && rimraf dist && tsc -p tsconfig.prod.json && pnpm test"
  },
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/react"
    ]
  }
}
