{
  "name": "Kogito Tooling",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "Kogito Tooling",
  "chrome_url_overrides": {
    "newtab": "newtab/home.html"
  },
  "content_scripts": [
    {
      "run_at": "document_idle",
      "css": ["resources/style.css"],
      "js": ["contentscript.js"],
      "matches": ["https://github.com/*", "https://raw.githubusercontent.com/*"],
      "all_frames": true
    }
  ],
  "web_accessible_resources": ["envelope/*", "editors/*", "resources/*"],
  "permissions": [
    "webRequestBlocking",
    "webRequest",
    "https://*/*",
    "http://*/*",
    "tabs",
    "declarativeContent",
    "background"
  ],
  "content_security_policy": "script-src 'self' https://raw.githubusercontent.com; object-src 'self'",
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  }
}
