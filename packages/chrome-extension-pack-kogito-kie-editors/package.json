{
  "name": "chrome-extension-pack-kogito-kie-editors",
  "version": "0.0.1",
  "private": true,
  "description": "",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/kiegroup/kogito-tooling.git"
  },
  "dependencies": {
    "@kogito-tooling/build-env": "0.0.1",
    "@kie-tooling-core/chrome-extension": "^0.0.7",
    "@kie-tooling-core/patternfly-base": "^0.0.7",
    "@kogito-tooling/external-assets-base": "0.0.1",
    "@kogito-tooling/kie-bc-editors": "0.0.1"
  },
  "scripts": {
    "lint": "run-script-if --bool $(build-env global.build.lint) --then \"yarn eslint ./src --ext .ts,.tsx\"",
    "test": "run-script-if --bool $(build-env global.build.test) --then \"jest --silent --verbose --passWithNoTests\"",
    "build:dev": "rimraf dist && webpack --env dev",
    "build:prod": "yarn lint && yarn test && rimraf dist && webpack && yarn test:it",
    "start": "webpack serve --env dev",
    "test:it:start:online-editor": "npm --prefix ../online-editor run start",
    "test:it:start": "yarn start",
    "test:it:run": "jest --runInBand -c ./jest.it.config.js",
    "test:it": "run-script-if --bool $(build-env global.build.testIT) --then \"yarn rimraf ./dist-it-tests\" \"yarn run start-server-and-test test:it:start:online-editor http-get://localhost:$(build-env onlineEditor.dev.port) test:it:start https-get://localhost:$(build-env chromeExtension.dev.port) test:it:run\""
  },
  "babel": {
    "presets": [
      "@babel/env",
      "@babel/react"
    ]
  }
}
