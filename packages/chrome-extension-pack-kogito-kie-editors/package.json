{
  "name": "chrome-extension-pack-kogito-kie-editors",
  "version": "0.0.1",
  "private": true,
  "description": "",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/kiegroup/kogito-tooling.git"
  },
  "dependencies": {
    "@kie-tooling-core/chrome-extension": "^0.0.6",
    "@kie-tooling-core/patternfly-base": "^0.0.6",
    "@kogito-tooling/external-assets-base": "0.0.1",
    "@kogito-tooling/kie-bc-editors": "0.0.1"
  },
  "scripts": {
    "lint": "run-script-if --env KOGITO_TOOLING_BUILD_lint --true-if-empty --then \"yarn eslint ./src --ext .ts,.tsx\"",
    "test": "run-script-if --env KOGITO_TOOLING_BUILD_test --true-if-empty --then \"jest --silent --verbose --passWithNoTests\"",
    "build:dev": "rimraf dist && webpack --env dev",
    "build:prod": "yarn lint && yarn test && rimraf dist && webpack && yarn test:it",
    "start": "webpack serve --env dev",
    "test:it:start:detached:linux:darwin": "yarn start &",
    "test:it:start:detached:win32": "echo \"Not supported\"",
    "test:it:start:detached": "run-script-os",
    "test:it:start:online-editor:detached:linux:darwin": "npm --prefix ../online-editor run start &",
    "test:it:start:online-editor:detached:win32": "echo \"Not supported\"",
    "test:it:start:online-editor:detached": "run-script-os",
    "test:it:shutdown:linux:darwin": "lsof -n -i :$(build-env chromeExtension.dev.port) -i :$(build-env onlineEditor.dev.port) | grep LISTEN | tr -s ' ' | cut -d' ' -f2 | xargs kill",
    "test:it:shutdown:win32": "echo \"Not supported\"",
    "test:it:shutdown": "run-script-os",
    "test:it:run:linux:darwin": "jest --runInBand -c ./jest.it.config.js",
    "test:it:run:win32": "echo \"Not supported\"",
    "test:it:run": "run-script-os",
    "test:it": "run-script-if --env KOGITO_TOOLING_BUILD_testIT --then \"yarn rimraf ./dist-it-tests\" \"yarn test:it:start:online-editor:detached\" \"yarn test:it:start:detached\" \"sleep 20\" \"yarn test:it:run\" --finally \"yarn test:it:shutdown\""
  },
  "babel": {
    "presets": [
      "@babel/env",
      "@babel/react"
    ]
  }
}
