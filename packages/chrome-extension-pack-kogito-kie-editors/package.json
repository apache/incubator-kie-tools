{
  "name": "chrome-extension-pack-kogito-kie-editors",
  "version": "0.10.0",
  "description": "",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/kiegroup/kogito-tooling.git"
  },
  "dependencies": {
    "@kie-tooling-core/chrome-extension": "^0.0.1",
    "@kogito-tooling/external-assets-base": "0.10.0",
    "@kogito-tooling/kie-bc-editors": "0.10.0"
  },
  "scripts": {
    "lint": "run-script-if --env KOGITO_TOOLING_BUILD_lint --true-if-empty --then 'yarn eslint ./src --ext .ts,.tsx'",
    "test": "run-script-if --env KOGITO_TOOLING_BUILD_test --true-if-empty --then 'jest --silent --verbose --passWithNoTests'",
    "build:dev": "rimraf dist && webpack --env dev",
    "build:prod": "yarn lint && yarn test && rimraf dist && webpack && yarn test:it",
    "start": "webpack serve --env dev",
    "test:it:start:detached": "webpack serve --env dev &",
    "test:it:start:online-editor:detached": "npm --prefix ../online-editor run start &",
    "test:it:shutdown": "pgrep webpack | xargs kill",
    "test:it": "run-script-if --env KOGITO_TOOLING_BUILD_testIT --then 'yarn build:dev' 'yarn test:it:start:online-editor:detached' 'yarn test:it:start:detached' 'sleep 20' 'jest --runInBand -c ./jest.it.config.js' 'yarn test:it:shutdown'"
  },
  "babel": {
    "presets": [
      "@babel/env",
      "@babel/react"
    ]
  }
}
