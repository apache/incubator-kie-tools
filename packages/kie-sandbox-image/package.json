{
  "private": true,
  "name": "@kie-tools/kie-sandbox-image",
  "version": "0.0.0",
  "description": "",
  "license": "Apache-2.0",
  "homepage": "https://github.com/kiegroup/kie-tools",
  "repository": {
    "type": "git",
    "url": "https://github.com/kiegroup/kie-tools.git"
  },
  "bugs": {
    "url": "https://github.com/kiegroup/kie-tools/issues"
  },
  "scripts": {
    "build:dev": "pnpm env-json:schema:generate && pnpm copy:assets && run-script-if --bool \"$(build-env containerImages.build)\" --then \"pnpm image:docker:build\"",
    "build:prod": "pnpm cleanup && pnpm env-json:schema:generate && pnpm copy:assets && run-script-if --bool \"$(build-env containerImages.build)\" --then \"pnpm image:docker:build\"",
    "cleanup": "rimraf dist-dev && mkdir dist-dev",
    "copy:assets": "pnpm copy:online-editor && pnpm copy:image-env-to-json",
    "copy:image-env-to-json": "cp ../image-env-to-json/dist/linux/image-env-to-json-standalone ./dist-dev/",
    "copy:online-editor": "cp -R ../online-editor/dist ./dist-dev/online-editor",
    "env-json:schema:generate": "ts-json-schema-generator --path ./node_modules/@kie-tools/online-editor/src/env/EnvJson.ts --type EnvJson --id EnvJson --out ./dist-dev/EnvJson.schema.json",
    "image:docker:build": "image-builder -r kieSandbox.image.registry -a kieSandbox.image.account -n kieSandbox.image.name -t kieSandbox.image.buildTags",
    "image:podman:build": "image-builder -r kieSandbox.image.registry -a kieSandbox.image.account -n kieSandbox.image.name -t kieSandbox.image.buildTags -e podman"
  },
  "dependencies": {
    "@kie-tools/image-env-to-json": "workspace:*",
    "@kie-tools/online-editor": "workspace:*"
  },
  "devDependencies": {
    "@kie-tools/image-builder": "workspace:*",
    "@kie-tools/root-env": "workspace:*",
    "rimraf": "^3.0.2",
    "run-script-os": "^1.1.6",
    "ts-json-schema-generator": "^1.1.2"
  }
}