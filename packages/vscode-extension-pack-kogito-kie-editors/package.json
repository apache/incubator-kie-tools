{
  "name": "vscode-extension-pack-kogito-kie-editors",
  "displayName": "BPMN and DMN Editors",
  "description": "",
  "version": "0.1.1",
  "license": "Apache-2.0",
  "engines": {
    "vscode": "^1.33.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kiegroup/kogito-tooling.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "publisher": "kiegroup",
  "main": "./dist/extension/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "bpmn",
        "extensions": [
          ".bpmn",
          ".bpmn2"
        ],
        "aliases": [
          "bpmn",
          "bpmn2",
          "Business Process Model and Notation"
        ]
      },
      {
        "id": "dmn",
        "extensions": [
          ".dmn"
        ],
        "aliases": [
          "dmn",
          "Decision Model and Notation"
        ]
      }
    ]
  },
  "scripts": {
    "pack-extension": "vsce package --yarn -o ./dist/kiegroup_kogito_kie_editors_$npm_package_version.vsix",
    "compile": "webpack",
    "watch": "webpack",
    "test": "echo 'No tests to run.'",
    "test:it": "rm -rf tests-it/out && tsc -p tests-it && node tests-it/out/main.js",
    "build:fast": "rm -rf dist && webpack",
    "build": "yarn run build:fast",
    "build:prod": "yarn run build --mode production --devtool none && yarn run test && yarn run test:it && yarn run pack-extension"
  },
  "jest-junit": {
    "outputDirectory": "./target"
  },
  "devDependencies": {
    "@types/glob": "7.1.1",
    "@types/mocha": "5.2.7",
    "@types/node": "10.12.21",
    "@types/vscode": "^1.33.0",
    "babel-core": "6.26.3",
    "babel-loader": "7.1.5",
    "babel-preset-env": "1.7.0",
    "babel-preset-react": "6.24.1",
    "copy-webpack-plugin": "5.0.3",
    "glob": "7.1.4",
    "jest": "23.5.0",
    "jest-junit": "6.3.0",
    "mocha": "6.1.4",
    "ts-jest": "23.1.3",
    "tslint": "5.12.1",
    "typescript": "3.3.1",
    "vsce": "1.59.0",
    "vscode-test": "1.0.0",
    "webpack": "4.15.1",
    "webpack-cli": "3.0.8"
  },
  "dependencies": {
    "@kogito-tooling/core-api": "0.1.1",
    "@kogito-tooling/gwt-editors": "0.1.1",
    "@kogito-tooling/microeditor-envelope": "0.1.1",
    "@kogito-tooling/microeditor-envelope-protocol": "0.1.1",
    "@kogito-tooling/unpacked-gwt-editors": "0.1.1",
    "@kogito-tooling/vscode-extension": "0.1.1"
  }
}
